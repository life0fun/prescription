// Example Stylus file

@import 'helpers'

// Main

body, html
  height 100%

body
  font normal 1em sans-serif
  vertical-gradient #eee, #fff
  text-align center

p
  margin-bottom 1em
  padding-right 10em
  text-align left

a
  color #000a68

h1
  font-size 1.5em
  font-weight normal
  margin 1.5em
  color #333
  text-shadow 1px 1px 2px white

#container
  margin-left 0px
  border-left 0px solid gray
  width 100%
  height 100%
  clear both

.sidebar
  min-width 10px
  max-width 100px
  position fixed
  padding 10px 0

#map_canvas
  margin-left 150px
  min-width 800px
  max-width 1000px


